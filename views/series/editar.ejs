<%- include('../partials/header') %>

    <section id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <h2>Sobre</h2>
                    <p class="lead">Todas as séries
                        <a href="/series/novaserie" class="btn btn-info">Nova Série</a>
                    </p>
                    <form method="post">
                        <div class="form-group">
                            <label for="name">Nome</label>
                            <input type="text" value="<%= serie.name  %> " class="form-control" id="name"
                                aria-describedby="nameHelp" placeholder="Nome da série" name='name'>
                            <small id="nameHelp" class="form-text text-muted">Campo para digitar o nome da série</small>
                            <% if(errors && errors.indexOf('name')>=0){ %>
                                <small id="nameHelp" class="form-text text-muted">Digite o nome da serie</small>
                                <% } %>
                        </div>
                        <div class="form-group">
                            <label for="status">Situação</label>
                            <select class="custom-select my-1 mr-sm-2" id="status" name="status">
                                <% labels.forEach(situacao=> { %>
                                    <option value="<%= situacao.id %>" <% if(situacao.id===serie.status){ %>
                                        selected <% } %>>
                                            <%= situacao.name %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <button type="submit">Salvar</button>
                    </form>

                </div>
            </div>
        </div>
        </div>
    </section>

    <%- include('../partials/footer') %>