<%- include('../partials/header') %>

    <section id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <h2>Sobre</h2>
                    <p class="lead">Todas as séries
                        <a href="/series/novaserie" class="btn btn-info">Nova Série</a>
                    </p>
                    <table class="table table-hover">
                        <% series.forEach(serie=> { %>
                            <tr>
                                <td>
                                    <a href="/series/info/<%= serie._id  %>">
                                        <%=serie.name %>
                                            <a />
                                </td>
                                <td>
                                    <% labels.forEach(label=> { %>
                                        <% if (label.id===serie.status) { %>
                                            <%= label.name %>
                                                <% }}); %>
                                </td>
                                <td>
                                    <a href="series/excluir/<%= serie._id  %> ">Excluir</a>
                                    <a href="series/editar/<%= serie._id  %> ">Editar</a>
                                </td>
                            </tr>
                            <% }); %>
                    </table>
                </div>
            </div>
        </div>
    </section>

    <%- include('../partials/footer') %>